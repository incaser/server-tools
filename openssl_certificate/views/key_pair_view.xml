<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="openssl_key_pair_form" model="ir.ui.view" >
        <field name="name">openssl.key.pair.form</field>
        <field name="model">openssl.key.pair</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Keys Pair">
                <header>
                    <button name="generate_key" type="object" states="draft"
                            string="Generate keys"/>
                    <field name="state" widget="statusbar" clickable="1"
                        statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="size"/>
                        <field name="partner_id"/>
                    </group>
                    <group string="Key">
                        <field name="private_key"/>
                        <field name="public_key"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="openssl_key_pair_tree" model="ir.ui.view">
        <field name="name">openssl.key.pair.tree</field>
        <field name="model">openssl.key.pair</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Keys pair">
                <field name="name"/>
                <field name="type"/>
                <field name="size"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="action_openssl_key_pair" model="ir.actions.act_window">
        <field name="name">Keys pair</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">openssl.key.pair</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

</data>
</openerp>